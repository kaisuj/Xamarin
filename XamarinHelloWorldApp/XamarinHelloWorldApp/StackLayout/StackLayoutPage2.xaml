<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinHelloWorldApp.StackLayout.StackLayoutPage2">
    <StackLayout Padding="0,20,0,0">
        <StackLayout Spacing="20" >
            <Label Text="nyc_photographer" FontSize="18" TextColor="Black" Margin="20,0,0,0"/>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Spacing="20" Padding="20,0,0,0">
                <Label Text="Like" FontSize="16" TextColor="#127ac7"/>
                <Label Text="Comment" FontSize="16" TextColor="#127ac7"/>
                <Label Text="Share" FontSize="16" TextColor="#127ac7"/>
            </StackLayout>
            
        </StackLayout>
        <StackLayout Padding="20">
            <BoxView Color="#c0c0c0" HeightRequest="1"/>
            <Label Text="700 likes" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
            <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark."
                   FontSize="18" TextColor="#606060" />
        </StackLayout>
    </StackLayout>
</ContentPage>